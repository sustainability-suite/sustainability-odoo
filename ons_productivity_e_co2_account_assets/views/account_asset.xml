<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_asset_form" model="ir.ui.view">
        <field name="name">account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='depreciation_board']//field[@name='depreciation_move_ids']//tree//field[@name='amount_total']" position="after">
                <field
                    name="ons_carbon_debt_deferred"
                    widget="monetary"
                    string="CO2 Depreciation"
                    options="{'currency_field': 'ons_co2_currency_id'}" attrs="{'readonly': [('state', '=', 'posted')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
