<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="sustainability_action_tree" model="ir.ui.view">
      <field name="name">sustainability.action.tree</field>
      <field name="model">sustainability.action</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="description" />
          <field name="complexity" />
          <field name="budget" />
          <field name="reduction_potential" />
          <field
            name="image"
            string="Image"
            widget="image"
            options="{'size': [128, 128]}"
          />
        </tree>
      </field>
    </record>

    <record id="sustainability_action_filter" model="ir.ui.view">
      <field name="name">sustainability.action.select</field>
      <field name="model">sustainability.action</field>
      <field name="arch" type="xml">
        <search string="Search Actions">
          <separator />
          <filter string="Archived" name="archived" domain="[('active', '=', False)]" />
        </search>
      </field>
    </record>

    <record id="sustainability_action_form" model="ir.ui.view">
      <field name="name">sustainability.action.form</field>
      <field name="model">sustainability.action</field>
      <field name="arch" type="xml">
        <form>
          <field name="active" invisible="1" />
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button
                type="object"
                name="action_see_scenarios"
                class="oe_stat_button"
                icon="fa-pie-chart"
              >
                <div class="o_field_widget o_stat_info">
                  <span
                    class="o_stat_value"
                    attrs="{'invisible': [('scenario_qty', '&lt;=', 1)]}"
                  >
                    <field name="scenario_qty" widget="statinfo" nolabel="1" />
                    Scenarios
                  </span>
                  <span
                    class="o_stat_value"
                    attrs="{'invisible': [('scenario_qty', '&gt;', 1)]}"
                  >
                    <field name="scenario_qty" widget="statinfo" nolabel="1" />
                    Scenario
                  </span>
                </div>
              </button>
              <button
                type="object"
                name="action_see_action_plans"
                class="oe_stat_button"
                icon="fa-tasks"
              >
                <div class="o_field_widget o_stat_info">
                  <span
                    class="o_stat_value"
                    attrs="{'invisible': [('action_plan_qty', '&lt;=', 1)]}"
                  >
                    <field name="action_plan_qty" widget="statinfo" nolabel="1" />
                    Action Plans
                  </span>
                  <span
                    class="o_stat_value"
                    attrs="{'invisible': [('action_plan_qty', '&gt;', 1)]}"
                  >
                    <field name="action_plan_qty" widget="statinfo" nolabel="1" />
                    Action Plan
                  </span>
                </div>
              </button>
            </div>
            <widget
              name="web_ribbon"
              title="Archived"
              bg_color="bg-danger"
              attrs="{'invisible': [('active', '=', True)]}"
            />
            <div class="oe_title">
              <label for="name" />
              <h1>
                <field name="name" />
              </h1>
            </div>
            <group>
              <field name="description" />
              <field name="complexity" widget="selection_badge" />
              <field name="budget" widget="selection_badge" />
              <field name="reduction_potential" widget="selection_badge" />
              <field name="action_plan_ids" widget="many2many_tags" />
            </group>
            <field name="image" widget="image" options="{'size': [256, 256]}" />
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" />
            <field name="activity_ids" />
            <field name="message_ids" />
          </div>
        </form>
      </field>
    </record>

    <record id="sustainability_action_window_action" model="ir.actions.act_window">
      <field name="name">Actions</field>
      <field name="res_model">sustainability.action</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No actions yet !</p>
      </field>
    </record>
  </data>
</odoo>
