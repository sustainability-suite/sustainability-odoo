<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="carbon_factor_tree" model="ir.ui.view">
            <field name="name">carbon.factor.tree</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="carbon_currency_id" invisible="1" />
                    <field name="carbon_compute_method" invisible="1" />
                    <field name="display_name" string="Name"/>
                    <field name="carbon_value" widget="monetary" options="{'currency_field': 'carbon_currency_id'}" attrs="{'invisible': [('carbon_compute_method', '=', False)]}" />
                    <field name="unit_label" attrs="{'invisible': [('carbon_compute_method', '=', False)]}" />

                </tree>
            </field>
        </record>

        <record id="carbon_factor_form" model="ir.ui.view">
            <field name="name">carbon.factor.form</field>
            <field name="model">carbon.factor</field>
            <field name="arch" type="xml">
                <form>
                    <field name="carbon_currency_id" invisible="1" />
                    <sheet>
                        <h1><field name="name" /></h1>

                        <group>
                            <field name="parent_id" />
                        </group>

                        <group>
                            <group>
                                <field name="carbon_compute_method" />
                            </group>
                            <group attrs="{'invisible': [('carbon_compute_method', '=', False)]}">
                                <label for="carbon_value" />
                                <div class="o_row">
                                    <field name="carbon_value" nolabel="1" class="oe_inline" />
                                    <field name="carbon_currency_label" class="font-italic" style="color: grey;" />
                                    <span class="oe_inline">/</span>
                                    <field name="carbon_uom_id" attrs="{'invisible': [('carbon_compute_method', '!=', 'physical')], 'required': [('carbon_compute_method', '=', 'physical')]}" nolabel="1" class="oe_inline" />
                                    <field name="carbon_monetary_currency_id" attrs="{'invisible': [('carbon_compute_method', '!=', 'monetary')], 'required': [('carbon_compute_method', '=', 'monetary')]}" nolabel="1" class="oe_inline" />
                                </div>
                            </group>
                        </group>



                        <notebook>
                            <page string="Child factors" name="page_child_factors">
                                <field name="child_ids" colspan="2" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="carbon_currency_id" invisible="1" />
                                        <field name="carbon_compute_method" invisible="1" />
                                        <field name="name" />
                                        <field name="carbon_value" widget="monetary" options="{'currency_field': 'carbon_currency_id'}" attrs="{'invisible': [('carbon_compute_method', '=', False)]}" />
                                        <field name="unit_label" attrs="{'invisible': [('carbon_compute_method', '=', False)]}" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="carbon_factor_action" model="ir.actions.act_window">
            <field name="name">CO2 Emission Factors</field>
            <field name="res_model">carbon.factor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
