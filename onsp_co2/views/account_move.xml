<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                    <field name="carbon_debt"/>
                    <button type="object" name="action_see_origin" icon="fa-question-circle" title="See CO2 value origin" />
                    <field name="carbon_debit" invisible="1"/>
                    <field name="carbon_credit" invisible="1"/>
                    <field name="carbon_balance" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="carbon_debt"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='credit']" position="after">
                    <field name="carbon_debt" optional="hide"/>
                    <field name="carbon_debit" optional="hide" sum="Total CO2 Debit"/>
                    <field name="carbon_credit" optional="hide" sum="Total CO2 Credit"/>
                    <field name="carbon_balance" optional="show" sum="Total CO2 Balance"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//form//field[@name='credit']" position="after">
                    <field name="carbon_debt" invisible="1"/>
                    <field name="carbon_debit" sum="Total CO2 Debit"/>
                    <field name="carbon_credit" sum="Total CO2 Credit"/>
                    <field name="carbon_balance" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
