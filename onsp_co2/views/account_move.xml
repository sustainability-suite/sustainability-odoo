<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_move_form" model="ir.ui.view">
            <field name="name">view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                    <field name="carbon_debt" widget="monetary" />
                    <field name="carbon_currency_id" invisible="1" />
                    <field name="carbon_value_origin" invisible="1" force_save="1" />
                    <button type="object" name="action_see_carbon_origin" icon="fa-question-circle" title="See CO2 value origin" />
                    <field name="carbon_debit" invisible="1"/>
                    <field name="carbon_credit" invisible="1"/>
                    <field name="carbon_balance" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="carbon_balance" widget="monetary" />
                    <field name="carbon_currency_id" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='credit']" position="after">
                    <field name="carbon_debt" optional="hide" widget="monetary" />
                    <field name="carbon_debit" optional="hide" sum="Total CO2 Debit" widget="monetary" />
                    <field name="carbon_credit" optional="hide" sum="Total CO2 Credit" widget="monetary" />
                    <field name="carbon_balance" optional="show" sum="Total CO2 Balance" widget="monetary" />
                    <field name="carbon_value_origin" invisible="1" force_save="1" />
                    <field name="carbon_currency_id" invisible="1" />
                </xpath>
                <xpath expr="//field[@name='line_ids']//form//field[@name='credit']" position="after">
                    <field name="carbon_debit" sum="Total CO2 Debit" widget="monetary"/>
                    <field name="carbon_credit" sum="Total CO2 Credit" widget="monetary"/>
                    <field name="carbon_debt" invisible="1"/>
                    <field name="carbon_balance" invisible="1"/>
                    <field name="carbon_value_origin" invisible="1" force_save="1" />
                    <field name="carbon_currency_id" invisible="1" />
                </xpath>
            </field>
        </record>

        <record id="view_move_tree" model="ir.ui.view">
            <field name="name">view_move_tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree" />
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <field name="carbon_balance" optional="show" widget="monetary" />
                    <field name="carbon_currency_id" invisible="1" />
                </xpath>
            </field>
        </record>


        <record id="action_recompute_carbon_account_move" model="ir.actions.server">
            <field name="name">Re-compute CO2</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">action = records.action_recompute_carbon()</field>
        </record>

    </data>
</odoo>
