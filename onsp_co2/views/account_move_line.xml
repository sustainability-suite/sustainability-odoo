<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">view_move_line_tree</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='credit']" position="after">
                <field name="carbon_balance" sum="Total CO2 Balance" optional="show" readonly="1" options="{'digits': [16, 2]}" />
                <field name="carbon_uncertainty_value" sum="Total CO2 Uncertainty" optional="hide" />
                <field name="carbon_debit" sum="Total CO2 Debit" optional="hide" readonly="1" options="{'digits': [16, 2]}" />
                <field name="carbon_credit" sum="Total CO2 Credit" optional="hide" readonly="1" options="{'digits': [16, 2]}" />
                <field name="carbon_debt" sum="Total CO2 Debt" optional="hide" readonly="1" options="{'digits': [16, 2]}" />
                <field name="carbon_currency_id" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="action_recompute_carbon_account_move_line" model="ir.actions.server">
            <field name="name">Re-compute CO2</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
            <field name="state">code</field>
            <field name="code">action = records.action_recompute_carbon()</field>
        </record>

</odoo>
