<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product_template_only_form_view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//group[1]" position="after">
                    <widget name="carbon_settings_panel" types="in,out" options="{'in': {'title': 'Purchases'}, 'out': {'title': 'Sales'}} "/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

