<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <menuitem
      id="sustainability_menu"
      name="Sustainability"
      web_icon="onsp_co2,static/description/icon.png"
      sequence="60"
      groups="base.group_user"
    >
      <menuitem
        id="carbon_line_origin_menu"
        name="Carbon Origins"
        sequence="1"
        groups="base.group_user"
        action="onsp_co2.carbon_line_origin_action"
      />
      <menuitem id="menu_emission_factors" name="Emission Factors" sequence="2">
        <menuitem
          id="carbon_factor_menu"
          name="Emission Factors"
          sequence="1"
          groups="base.group_user"
          action="onsp_co2.carbon_factor_action"
        />
        <menuitem
          id="carbon_factor_source_menu"
          name="Emission Factor Sources"
          sequence="2"
          groups="base.group_user"
          action="onsp_co2.carbon_factor_source_action"
        />
        <menuitem
          id="carbon_factor_type_menu"
          name="Emission Factor Types"
          sequence="3"
          groups="base.group_user"
          action="onsp_co2.carbon_factor_type_action"
        />
      </menuitem>
      <menuitem
        id="menu_sustainability_configuration"
        name="Configuration"
        groups="base.group_system"
        sequence="3"
      >
        <menuitem
          id="menu_sustainability_config"
          name="Settings"
          groups="base.group_system"
          sequence="1"
          action="action_open_sustainability_settings"
        />
      </menuitem>
    </menuitem>

    <record id="action_open_sustainability_settings" model="ir.actions.act_window">
      <field name="name">Sustainability Settings</field>
      <field name="res_model">res.config.settings</field>
      <field name="view_mode">form</field>
      <field name="context">{'module' : 'onsp_co2', 'bin_size': False}</field>
      <field name="target">inline</field>
    </record>
  </data>
</odoo>
