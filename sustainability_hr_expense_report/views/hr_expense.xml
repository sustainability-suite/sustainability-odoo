<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="hr_expense_view_form" model="ir.ui.view">
    <field name="name">hr.expense.view.form.inherit.co2.expense</field>
    <field name="model">hr.expense</field>
    <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//label[@for='tax_ids']" position="before">
        <field name="carbon_currency_id" invisible="1" />
        <field name="carbon_is_locked" invisible="1" />
        <label for="carbon_debt" />
        <div class="o_row">
          <field
            name="carbon_debt"
            digits="[13,2]"
            attrs="{'readonly': [('carbon_is_locked', '=', True)]}"
          />
          <button
            title="Unlock co2"
            type="object"
            name="action_switch_locked"
            attrs="{'invisible': [('carbon_is_locked', '=', True)]}"
            icon="fa-unlock"
            class="opacity-25"
          />
          <button
            title="Lock co2"
            type="object"
            name="action_switch_locked"
            attrs="{'invisible': [('carbon_is_locked', '=', False)]}"
            icon="fa-lock"
          />
        </div>
      </xpath>
    </field>
  </record>
</odoo>
