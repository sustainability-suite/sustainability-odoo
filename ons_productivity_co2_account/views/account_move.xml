<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_subtotal']" position="after">
                    <field name="ons_carbon_debt"/>
                    <field name="ons_carbon_debit" invisible="1"/>
                    <field name="ons_carbon_credit" invisible="1"/>
                    <field name="ons_carbon_balance" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='amount_residual']" position="after">
                    <field name="ons_carbon_debt"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//tree//field[@name='credit']" position="after">
                    <field name="ons_carbon_debt" optional="hide"/>
                    <field name="ons_carbon_debit" optional="show" sum="Total CO2 Debit"/>
                    <field name="ons_carbon_credit" optional="show" sum="Total CO2 Credit"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//form//field[@name='credit']" position="after">
                    <field name="ons_carbon_debt" invisible="1"/>
                    <field name="ons_carbon_debit" sum="Total CO2 Debit"/>
                    <field name="ons_carbon_credit" sum="Total CO2 Credit"/>
                    <field name="ons_carbon_balance" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
