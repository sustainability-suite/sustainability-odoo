<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
      name="name"
    >res.config.settings.view.form.inherit.carbon.hr.commuting</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="onsp_co2.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='onsp_co2']/div" position="after">
                <h2>Employee Commuting</h2>
                <div class="row mt16 o_settings_container">
                    <div
            class="col-6 col-lg-6 o_setting_box"
            title="Setup commuting means"
          >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Emission factor</span>
                            <div class="text-muted">
                                <p
                >Emission factor node applicable to employee commuting</p>
                            </div>
                            <div>
                                <field
                  name="employee_commuting_carbon_factor_id"
                  placeholder="Pick a emission factor"
                />
                            </div>
                        </div>
                    </div>

                    <div
            class="col-6 col-lg-6 o_setting_box"
            title="Setup Commuting journal"
          >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Emission journal</span>
                            <div class="text-muted">
                                <p>Emission journal applicable to employee commuting</p>
                            </div>
                            <div>
                                <field
                  name="employee_commuting_journal_id"
                  placeholder="Pick a journal"
                />
                            </div>
                        </div>
                    </div>
                    <div
            class="col-6 col-lg-6 o_setting_box"
            title="Setup Commuting account"
          >
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Emission account</span>
                            <div class="text-muted">
                                <p>Emission account applicable to employee commuting</p>
                            </div>
                            <div>
                                <field
                  name="employee_commuting_account_id"
                  placeholder="Pick an account"
                />
                            </div>
                        </div>
                    </div>
                    <div
            class="col-6 col-lg-6 o_setting_box"
            title="Setup Commuting account"
          >
                        <div class="o_setting_left_pane">
                            <field name="employee_commuting_carbon_cronjob_active" />
                        </div>
                        <div class="o_setting_right_pane">
                            <span
                class="o_form_label"
              >Activate automatic computation</span>
                            <div class="text-muted">
                                <p
                >Automatically compute employee commuting's carbon every month.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
