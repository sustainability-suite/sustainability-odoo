<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_employee_form_commuting" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.commuting</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page
          name="commuting_settings"
          string="Commuting"
          groups="hr.group_hr_user"
        >
                    <field name="carbon_commuting_ids">
                        <tree
              string="Record Commuting"
              editable="bottom"
              no-open="true"
            >
                            <field name="carbon_factor_id" widget="many2one" />
                            <field name="allowed_carbon_factor_ids" invisible="1" />
                            <field name="distance_km" />
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
