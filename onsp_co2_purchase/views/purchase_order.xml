<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//field[@name='price_subtotal']" position="after">
                    <field name="carbon_debt" optional="show" widget="monetary" />
                    <field name="carbon_currency_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals']" position="after">
                    <field name="carbon_debt" widget="monetary" />
                    <field name="carbon_currency_id" invisible="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
