              <field
                name="carbon_in_fallback_reference"
                widget="reference"
                attrs="{'invisible': [('carbon_in_is_manual', '=', True)]}"
              />
              <field
                name="carbon_in_factor_id"
                attrs="{'invisible': [('carbon_in_is_manual', '=', False)], 'required': [('carbon_in_is_manual', '=', True)]}"
              />
            </group>

