<?xml version="1.0"?>
<odoo>
    <data>
        <record id="product_template_form_view" model="ir.ui.view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="ons_productivity_co2.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ons_carbon_sale_ratio']" position="after">
                    <field name="valuation" invisible="1"/>
                    <field name="bom_count" invisible="1"/>
                    <button name="ons_button_bom_cost"
                        string="Compute CO2 from BoM" type="object"
                        attrs="{
                            'invisible': [
                                '|',
                                    ('bom_count', '=', 0),
                                    ('valuation', '=', 'real_time'),
                            ]
                        }"
                        class="oe_link oe_read_only pt-0"
                        colspan="2"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
