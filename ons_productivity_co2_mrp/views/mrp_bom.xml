<?xml version="1.0"?>
<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='components']" position="inside">
                    <group name="note_group" col="6" class="mt-2 mt-md-0">
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="co2_info">
                            <field name="ons_co2_currency_id" invisible="1"/>
                            <field
                                name="ons_carbon_offset"
                                widget="monetary"
                                options="{'currency_field': 'ons_co2_currency_id'}"
                            />
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
